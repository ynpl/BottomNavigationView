<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mine_bg"
        android:paddingLeft="@dimen/spacing_16"
        android:paddingTop="@dimen/spacing_8"
        android:paddingRight="@dimen/spacing_16"
        android:paddingBottom="@dimen/spacing_8">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_ygf_item_main_task_list"
            android:padding="@dimen/spacing_15">

            <LinearLayout
                android:id="@+id/ll_team_history_task_title_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/btn_sync_task"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_history_task_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="赵柿子"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:id="@+id/tv_item_history_task_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spacing_15"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="102039302"
                    android:textColor="@color/grey_666666"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_team_history_task_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_team_history_task_title_info"
                android:layout_marginTop="@dimen/spacing_10"
                android:layout_toLeftOf="@id/btn_sync_task"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/team_history_task_info_menmber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/spacing_16"
                        android:layout_height="@dimen/spacing_16"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_history_list_location" />

                    <TextView
                        android:id="@+id/tv_team_history_task_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_task_title_info"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/spacing_6"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="张三、例子"
                        android:textColor="@color/grey_999999"
                        android:textSize="@dimen/font_12" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/team_task_info_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_4"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/spacing_16"
                            android:layout_height="@dimen/spacing_16"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/icon_history_list_time" />

                        <TextView
                            android:id="@+id/tv_team_history_task_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/spacing_6"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="2019/4/1～2019/4/30"
                            android:textColor="@color/grey_999999"
                            android:textSize="@dimen/font_12" />


                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/btn_sync_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_team_history_task_title_info"
                android:layout_alignParentEnd="true"
                android:text="赵柿子"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/font_16" />

            <TextView
                android:id="@+id/tv_team_history_task_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_sync_task"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/spacing_5"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="已完成"
                android:textColor="@color/grey_666666"
                android:textSize="@dimen/font_14" />

        </RelativeLayout>
    </RelativeLayout>
</layout>
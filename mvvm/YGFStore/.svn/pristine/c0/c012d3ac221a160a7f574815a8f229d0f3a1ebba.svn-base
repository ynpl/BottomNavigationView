<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/spacing_20"
    android:orientation="vertical"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_10"
        android:layout_marginEnd="@dimen/spacing_10"
        android:background="@drawable/bg_fail_reasons_childs_normal"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_1"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:text="@string/task_detail_activity_photograph"
            android:textColor="@color/main_blue_5584FF"
            android:textSize="@dimen/font_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_d8d8d8" />

        <Button
            android:id="@+id/btn_2"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:text="@string/task_detail_activity_hint_select_from_the_album"
            android:textColor="@color/main_blue_5584FF"
            android:textSize="@dimen/font_16" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_cancel"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_10"
        android:background="@drawable/bg_fail_reasons_childs_normal"
        android:gravity="center"
        android:text="@string/common_cancel"
        android:textColor="@color/main_blue_5584FF"
        android:textSize="@dimen/font_16" />


</LinearLayout>